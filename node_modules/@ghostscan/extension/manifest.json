{
  "manifest_version": 3,
  "name": "GhostScan Privacy Tool",
  "version": "1.0.1",
  "description": "AI-powered privacy tool that detects, explains, and helps you eliminate digital exposure",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "identity",
    "history"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*",
      "https://localhost:*/*",
      "https://127.0.0.1:*/*",
      "http://localhost:5173/*",
      "http://localhost:5174/*",
      "http://localhost:5175/*",
      "http://localhost:5176/*",
      "http://localhost:5177/*",
      "http://localhost:5178/*",
      "http://127.0.0.1:5173/*",
      "http://127.0.0.1:5174/*",
      "http://127.0.0.1:5175/*",
      "http://127.0.0.1:5176/*",
      "http://127.0.0.1:5177/*",
      "http://127.0.0.1:5178/*",
      "http://[::1]:5173/*",
      "http://[::1]:5174/*",
      "http://[::1]:5175/*",
      "http://[::1]:5176/*",
      "http://[::1]:5177/*",
      "http://[::1]:5178/*",
      "https://dashboard-qnho4scmf-toms-projects-0165a016.vercel.app/*",
      "https://dashboard-fyvwahblw-toms-projects-0165a016.vercel.app/*",
      "https://dashboard-oc244rqyt-toms-projects-0165a016.vercel.app/*",
      "https://*.ghostscan.com/*",
      "https://vercel.com/*",
      "https://*.vercel.app/*",
      "https://*/*",
      "https://vercel.com/toms-projects-0165a016/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "test-popup.html",
    "default_title": "GhostScan"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 