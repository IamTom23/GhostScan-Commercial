# Cloudyx Security Dashboard Environment Configuration

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cloudyx_security
DATABASE_USER=cloudyx
DATABASE_PASSWORD=your_secure_password_here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_jwt_secret_here_32_characters_minimum
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# OAuth Provider Credentials
# Google OAuth (for Google Cloud Platform integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# AWS OAuth (for AWS integration)  
AWS_CLIENT_ID=your_aws_client_id
AWS_CLIENT_SECRET=your_aws_client_secret
AWS_REGION=us-east-1

# Microsoft Azure OAuth (for Azure integration)
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=security@cloudyx.com

# External APIs
# HaveIBeenPwned API (for breach checking)
HIBP_API_KEY=your_hibp_api_key

# Shodan API (for exposure scanning)
SHODAN_API_KEY=your_shodan_api_key

# VirusTotal API (for threat intelligence)
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info
LOG_FILE=logs/cloudyx.log

# Feature Flags
ENABLE_BREACH_MONITORING=true
ENABLE_CLOUD_SCANNING=true
ENABLE_COMPLIANCE_TRACKING=true
ENABLE_THIRD_PARTY_INTEGRATIONS=true

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_here

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
POSTHOG_API_KEY=

# Monitoring (optional)
SENTRY_DSN=
DATADOG_API_KEY=